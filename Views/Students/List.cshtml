@{
}

@model List<StudentPortal.Models.Entities.Student>
<div class="d-flex justify-content-center">
    <h1>Students</h1>
</div>

<table class="table">
    <thead class="table-dark">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Maths</th>
            <th>Science</th>
            <th>Arts</th>
            <th>Total</th>

        </tr>
    </thead>
    <tbody>
        
            @foreach(var student in Model)
        {
            <tr>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Maths</td>
                <td>@student.Science</td>
                <td>@student.Arts</td>
                <td>@student.Total</td>
            </tr>
            }
       
    </tbody>
</table>